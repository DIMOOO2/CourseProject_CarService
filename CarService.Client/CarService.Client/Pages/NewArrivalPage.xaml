<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarService.Client.Pages.NewArrivalPage"
             Title=""
             xmlns:uran="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="ButtonStyle">
                <Setter Property="Background" Value="OrangeRed"/>
                <Setter Property="TextColor" Value="White"/>

                <Style.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="Orange"/>
                    </Trigger>
                    <Trigger TargetType="Button" Property="IsPressed" Value="False">
                        <Setter Property="Background" Value="OrangeRed"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
                <Label Text="Новая поставка" FontSize="30" FontAttributes="Bold" 
    Margin="10,0,0,0" VerticalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Margin="10">
                <input:FormView Spacing="10">
                    <uran:TextField Title="Название запчасти" Text="{Binding FirstName}"
                        FontSize="18" TitleFontSize="16" AccentColor="OrangeRed">
                        <validation:RequiredValidation Message="Это обязательное поле ввода"/>
                    </uran:TextField> 
                    
                    <uran:TextField Title="Цена в рублях" Text="{Binding FirstName}"
                        FontSize="18" TitleFontSize="16" AccentColor="OrangeRed">
                        <validation:RequiredValidation Message="Это обязательное поле ввода"/>
                        <validation:RegexValidation Pattern="{x:Static input:AdvancedEntry.REGEX_DECIMAL}" Message="Поле должно содержать только десятичное число"/>
                    </uran:TextField> 
                    
                    <uran:TextField Title="Количество" Text="{Binding FirstName}"
                        FontSize="18" TitleFontSize="16" AccentColor="OrangeRed">
                        <validation:RequiredValidation Message="Это обязательное поле ввода"/>
                        <validation:DigitsOnlyValidation Message="Поле должно содержать только цифры больше 0"/>
                    </uran:TextField>

                    <uran:DropdownField AccentColor="OrangeRed" Title="Производитель" FontSize="18" TitleFontSize="16"/>
                </input:FormView>
            </StackLayout>

            <StackLayout Margin="10" Grid.Row="3">
                <Button Text="Сохранить" Style="{x:StaticResource ButtonStyle}"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>