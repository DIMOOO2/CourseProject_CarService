<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarService.Client.Pages.MainPage"
             Title=""
             xmlns:vm="clr-namespace:CarService.Client.ViewModels"
             x:DataType="vm:MainPageViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="ButtonStyle">
                <Setter Property="Background" Value="OrangeRed"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center"
                     Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
            <Label Text="Заказы клиентов" FontSize="30" FontAttributes="Bold"/>
        </StackLayout>

        <Button Text="Добавить новый заказ" HorizontalOptions="Fill"
                     Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" Style="{StaticResource ButtonStyle}"/>

        <!--Потом когда будешь ViewModel делать укажешь свойство отображения-->
        <ListView IsVisible="True"/>
        
        <!--Здесь тоже самое-->
        <StackLayout Orientation="Vertical" Grid.Row="1" Grid.Column="2" VerticalOptions="Center" IsVisible="True" Spacing="20">
            <Image Source="icon_add_to_cart.png" WidthRequest="200" HeightRequest="200"/>
            <Label Text="Пока здесь нет заказа, добавьте заказы чтобы они здесь отобразились" FontSize="Default"
                   FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
