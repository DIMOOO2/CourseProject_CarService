<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarService.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarService.Client.Pages"
    Shell.FlyoutBehavior="Locked"
    Title="Автозапчасти.Логистика">
   
    <ShellContent
        Title="Клиентские заказы"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    
    <ShellContent
        Title="Поиск запчастей"
        ContentTemplate="{DataTemplate local:SearchAutoPart}"
        Route="SearchAutoPart" />

    <ShellContent
        Title="Заказать запчасти"
        ContentTemplate="{DataTemplate local:OrderPage}"
        Route="OrderPage" />
</Shell>
