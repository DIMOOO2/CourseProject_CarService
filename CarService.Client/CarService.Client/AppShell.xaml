<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarService.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarService.Client.Pages"
    Shell.FlyoutBehavior="Locked"
    Title="Автозапчасти.Логистика"
    Shell.BackgroundColor="OrangeRed">

    <ShellContent
            Title="Клиентские заказы"
            Icon="main_page_logo.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    <ShellContent
            Title="Поиск запчастей"
            Icon="search_auto_part_logo.png"
            ContentTemplate="{DataTemplate local:SearchAutoPart}"
            Route="SearchAutoPart" />

    <ShellContent
            Title="Заказать запчасти"
            Icon="order_page_logo.png"
            ContentTemplate="{DataTemplate local:OrderPage}"
            Route="OrderPage" />
</Shell>
