<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarService.Administrator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarService.Administrator.Pages"
    Shell.FlyoutBehavior="Locked"
    Title="CarService.Administrator">

    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent 
        Title="Заказы"
        ContentTemplate="{DataTemplate local:OrdersPage}"
        Route="OrdersPage"/>

    <ShellContent
        Title="Склады"
        ContentTemplate="{DataTemplate local:WarehousePage}"
        Route="WarehousePage"/>

</Shell>
